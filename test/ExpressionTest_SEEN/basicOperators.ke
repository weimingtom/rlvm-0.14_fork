// Test both the binary addition operator and the inplace one
intA[0] = 1 + 1
intA[1] = intA[0]
intA[1] += 1

// Test subtraction
intA[2] = 3 - intA[1]
intA[3] = 5
intA[3] -= 2

// Test multiplication
intA[4] = 2 * 5
intA[5] = intA[4]
intA[5] *= 3

// Test division
intA[6] = 20 / 2
intA[7] = intA[6]
intA[7] /= 5

// Test modulus
intA[8] = 8 % 3  // 2
intA[9] = 11
intA[9] %= 2
